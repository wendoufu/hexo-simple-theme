mixin home()
    - var prev = page.prev_link
    - var next = page.next_link 
    .paginator
        if page.prev
            a.prev(href=url_for(prev))
                != __('上一页')
        if page.next
            a.next(href=url_for(next))
                != __('下一页')
        span.logo 2017 - 2020

mixin post()
    - var prev = page.prev ? page.prev.path : false;
    - var next = page.next ? page.next.path : false;
    .paginator
        if prev
            a.prev(href=url_for(prev))
                != __('上一篇')
        if next
            a.next(href=url_for(next))
                != __('下一篇')
        span.logo 2017 - 2020